@model IEnumerable<donk.Models.CartItemViewModel>

@{
    ViewData["Title"] = "購物車";
}

<h1>購物車</h1>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>商品名稱</th>
                <th>單價</th>
                <th>數量</th>
                <th>總計</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <form asp-action="UpdateCartItemQuantity" method="post">
                            <input type="hidden" name="cartItemId" value="@item.Id" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" style="width: 60px;" />
                            <button type="submit" class="btn btn-sm btn-primary">更新</button>
                        </form>
                    </td>
                    <td>@item.Total.ToString("C")</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="cartItemId" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">移除</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <h3>總金額：@Model.Sum(item => item.Total).ToString("C")</h3>
        <form asp-action="ClearCart" method="post">
            <button type="submit" class="btn btn-danger">清空購物車</button>
        </form>
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">繼續購物</a>
        <a asp-controller="Checkout" asp-action="Index" class="btn btn-success">結帳</a>
    </div>
}
else
{
    <p class="alert alert-info">您的購物車是空的。</p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">前往商品頁面</a>
}
