@model donk.Models.Usersmetadata


<h2 class="text-center mb-4">登入</h2>



@if (TempData["ErrorMessage"] != null)
{
    <div  class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}



<form asp-action="Index" method="post" class="w-50 mx-auto">
    <div class="form-group">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control mb-3" pattern="^\S+$" required />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control mb-3" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-block mt-3">登入</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}