@model donk.Models.Usersregister

@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center my-4">註冊</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Register" method="post" class="shadow p-4 rounded bg-light">
                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label">帳號</label>
                    <input asp-for="Username" class="form-control" placeholder="輸入帳號" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">密碼</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="輸入密碼" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">確認密碼</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="確認密碼" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Phone" class="form-label">電話號碼</label>
                    <input asp-for="Phone"  class="form-control" placeholder="輸入電話號碼" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Address" class="form-label">輸入地址</label>
                    <input asp-for="Address" type="text" class="form-control" placeholder="輸入地址" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Email" class="form-label">信箱</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="輸入信箱" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">送出</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
